<div class = "container">
<h1><%= @project.name %></h1>
<p>
<strong>Description:</strong> <%= @project.description %><br>
<strong>Status:</strong> <%= @project.status%><br>
<strong>Start Date:</strong> <%= @project.start_date %><br>
<strong>End Date:</strong> <%= @project.end_date %><br>
<strong>Created By:</strong> <%= @project.created_by_id %><br>
</p>

<h2>Tasks</h2>

<% if @projects_tasks.present? %>
<div class="row">
  <% @projects_tasks.each do |task| %>
  <div class="col-sm-6 my-3 mb-sm-0">
  <div class="card">
      <div class="card-body">
    <p>
      <strong>Assign Name: <%= task.user.first_name %> <%= task.user.last_name %><br>
      <strong>Name:</strong> <%= task.name %><br>
      <strong>Description:</strong> <%= task.description %><br>
      <strong>Priority:</strong> <%= task.priority %><br>
      <strong>Status:</strong> <%= task.status %><br>
    </p>
      <%= button_to 'Delete the Task', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }, class: 'btn-danger' %>
  </div>
</div>
</div>

  <% end %>
  </div>
<% else %>
  <p>No tasks available for this project.</p>
<% end %>
</div>


<p><%= link_to 'Delete the Project', project_path(@project), data:{turbo_method: :delete}, class: "btn btn-danger" %></p>


<p><%= link_to "Back to Projects", projects_path %></p>


 <p><%= link_to 'Add Task', new_project_task_path(@project) %></p>
</div>

<h1>Create a New Task</h1>

<%= simple_form_for [@project, @task] do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <%= f.input :priority, collection: ["Low", "Medium", "High"], include_blank: "Select Priority" %>
  <%= f.input :status, collection: ["Pending", "In Progress", "Completed"], include_blank: "Select Status" %>
  <%= f.input :user_id, collection: User.all.map { |u| [u.first_name + " " + u.last_name, u.id] }, include_blank: "Assign to" %>
  <%= f.submit "Create Task", class: "btn-purple-full-width" %>
<% end %>
